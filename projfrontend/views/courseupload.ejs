            <option value="9">Medical</option>
            <option value="10">Sciences</option>
            <option value="11">Social Sciences</option>
            <option value="12">Others</option>
          </select>

  <button type="submit" class="btn btn-primary btn-lg next-btn">Next</button>

  </form>

  
  

